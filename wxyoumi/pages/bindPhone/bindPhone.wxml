<view id="warpper">
      <top-nav-type-three></top-nav-type-three> 
      <view class="login-verification">
          <view class="login-form-phone">
            <view class="user-login-phone user-account">
              <input type="number" class="user-accPwd-input" bindinput="phoneInput"  placeholder="请输入手机号"/>
              <i class="user-accPwd-phoneName">手机号</i>
            </view>
            <view class="user-login-phone user-password">
              <input type="number"  bindinput="codeInput" value='{{code}}' placeholder="请输入手机验证码"/>
              <i class="user-accPwd-phoneName">手机验证码</i>
              <i class="user-accPwd-VerifCode"  bindtap="getVerCode">获取验证码</i>
            </view>
            <view class="login" bindtap="submitPhone">
              <text>确定</text>
            </view>
          </view>
      </view>
  </view>