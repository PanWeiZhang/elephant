<!-- login.wxml -->
<view class='warpper'>
   <!-- 登陆基础信息验证 start -->
    <view class="login-verification">
        <view class="login-type-title">
            <view class="login-type-title-item login-account-password" bindtap="accLogin">
                 <navigator url="" id="accountLogin" class='{{loginActiveAccount?"login-type-active":""}}' hover-class="none">账号密码登陆</navigator> 
            </view>
            <view class="login-type-title-item login-phone-verification" bindtap="phoneLogin">
                 <navigator url="" id="phoneLogin" class='{{loginActivePhone?"login-type-active":""}}' hover-class="none">手机验证码登陆</navigator> 
            </view>
        </view>
        <block wx:if="{{phoneLogin}}">
        <view class="login-form-phone" id="login-form-phone" >
            <view class="user-login-phone user-account">
                <input type="number" class="user-accPwd-input"  id="userPhone" name="" placeholder="请输入手机号"/> 
                <text class="user-accPwd-phoneName">手机号</text>
            </view>
            <view class="user-login-phone user-password">
                <input  class="user-accPwd-input" id="setPhoneVerifCode" name="" placeholder="请输入手机验证码"/> 
                <text class="user-accPwd-phoneName">手机验证码</text>
                <text class="user-accPwd-VerifCode" id="getVerifCode">获取验证码</text>
            </view>
            <view class="login" id="phoneTypeLogin">
                <text>登录</text>
            </view>
        </view>
        </block>
        <block wx:if="{{accoutLogin}}">
        <view class="login-form-account" id="login-form-account">
            <view class="user-login user-account">
                <input  class="user-accPwd-input"  id="userAccount"  placeholder="用户名/邮箱/已验证手机" /> 
                <text class="user-accPwd-name" >账号</text>
            </view>
            <view class="user-login user-password">
                <input password  class="user-accPwd-input" id="userPassword" placeholder="请输入密码"/>
                <text class="user-accPwd-name" >密码</text>
            </view>
            <view class="login" id="accountTypeLogin">
                <text>登录</text>
            </view>
        </view>
        </block>
        <view class="login-auxiliary">
            <view class="forget-password">
                 <navigator url="" class="forget-passwordnavigator" hover-class="none">忘记密码？</navigator>
            </view>
            <view class="quick-register">
                <text>快速注册</text>
            </view>
        </view>
    </view>
    <!-- 登陆基础信息验证 end -->
    <!-- 第三方登陆及协议 start  -->
    <view class="other-login-andAgreement">
        <!-- 间隔样式 start  -->
        <view class="interval-style-1">
            <text class="intervalLine"></text>
            <text class="intervalLineText">其他登陆方式</text>
        </view>
        <!-- 间隔样式 end   -->
        <view id="loginAgreementItems">
            <view class='loginAgreementItem'>
                <text class="agrItemI qq_ico"></text>
                <text class="agrItemSpan">QQ</text>
            </view>
            <view class='loginAgreementItem'>
                <text class="agrItemI wx_ico"></text>
                <text class="agrItemSpan">微信</text>
            </view>
        </view>
        <view class="login-agreement">
           <view class="login-agreement-txt">登录即代表您已同意<text>柚咪隐私政策</text></view>  
        </view>
    </view>
    <!-- 第三方登陆及协议 end  -->
</view>
